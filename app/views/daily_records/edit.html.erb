<% provide(:title, 'Add calories') %>
<h1>カロリーを追加</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with(model: @daily_record, url: user_daily_record_path) do |f| %>
    <!--url: user_daily_records_path-->
        <%= render 'shared/error_messages' %>

        <%= f.label :"カロリー (kcal)" %>
        <%= f.number_field :total_calorie, class: 'form-control' %>

        <%= f.label :"タンパク質合計 (g)" %>
        <%= f.number_field :total_protain, class: 'form-control' %>

        <%= f.label :"脂質合計 (g)" %>
        <%= f.number_field :total_fat, class: 'form-control' %>

        <%= f.label :"炭水化物合計 (g)" %>
        <%= f.number_field :total_carbo, class: 'form-control' %>

        <%= f.label :"日付" %>
        <%= f.date_field :date, class: 'form-control' %>

        <%= f.submit "追加", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
